
@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>;

<h1>Machines</h1>

@if (@Model.Count == 0)
{
  <h3>No Machines listed! Click @Html.ActionLink("here", "Create") to add a new machine.
	</h3>
} 

@foreach (Machine machine in Model)
{
  <li>@Html.ActionLink($"{Machine.MName}", "Details", new { id = machine.MId })</li>
}

